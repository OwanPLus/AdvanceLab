void setup() {
  pinMode(9, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  int potValue = analogRead(A1);  // Reads from A1 (potentiometer)
  int thermValue = analogRead(A2);   // Reads from A2 (thermistor)
  
  int dutyCycle = map(potValue, 0, 1023, 0, 255);
  analogWrite(9, dutyCycle);
  
  Serial.print(millis());
  Serial.print(",");
  Serial.print(potValue);
  Serial.print(",");
  Serial.println(thermValue);
  
  delay(200);
}
